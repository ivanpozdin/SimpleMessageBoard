<li class="message" id="<%= message.id%>" onclick="location.href = '<%= base%>message/<%= message.id%>';">
  <div class="message-head">
    <h3 class="user"><%= message.user %></h3>
    <p class="added"><%= message.added.toLocaleString() %></p>
  </div>
  <p class="text"><%= message.text %></p>
</li>